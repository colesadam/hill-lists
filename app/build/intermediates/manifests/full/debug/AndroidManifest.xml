<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.colessoft.android.hilllist"
    android:installLocation="auto"
    android:versionCode="34"
    android:versionName="2.21" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:restoreAnyVersion="false"
        android:restoreNeedsApplication="true"
        android:testOnly="false"
        android:theme="@style/MyTheme" >
        <activity
            android:name="uk.colessoft.android.hilllist.activities.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uk.colessoft.android.hilllist.activities.DisplayHillListFragmentActivity" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="uk.colessoft.android.hilllist.activities.HillDetailFragmentActivity"
            android:label="Hill Details" />
        <activity android:name="uk.colessoft.android.hilllist.activities.Main" />
        <activity android:name="uk.colessoft.android.hilllist.activities.AboutActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.BaggingExportActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.BusinessSearchMapActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.NearbyHillsFragmentActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.NearbyHillsMapFragmentActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.ListHillsMapFragmentActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.CheckHillListActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.DetailGMapActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.BusinessDetailActivity" />
        <activity
            android:name="uk.colessoft.android.hilllist.activities.ScottishHillsActivity"
            android:label="@string/label_scottish_hills" />
        <activity
            android:name="uk.colessoft.android.hilllist.activities.WelshHillsActivity"
            android:label="@string/label_welsh_hills" />
        <activity
            android:name="uk.colessoft.android.hilllist.activities.EnglishHillsActivity"
            android:label="@string/label_english_hills" />
        <activity
            android:name="uk.colessoft.android.hilllist.activities.OtherGBHillsActivity"
            android:label="@string/label_other_GB_hills" />
        <activity android:name="uk.colessoft.android.hilllist.activities.PreferencesActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.ImageSearchActivity" />
        <activity android:name="uk.colessoft.android.hilllist.activities.OsMapActivity" />
    </application>

</manifest>