<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="?attr/colorControlHighlight">
<fragment
    
    android:name="uk.colessoft.android.hilllist.ui.fragment.DisplayHillListFragment"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:id="@+id/hill_list_fragment"
    android:layout_weight="50"
    android:paddingRight="10sp"
    android:layout_marginRight="4dp"
    tools:layout="@layout/list_hills"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp">
</fragment>
<fragment
    
    android:name="uk.colessoft.android.hilllist.ui.fragment.HillDetailFragment"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:id="@+id/hill_detail_fragment"
    android:layout_weight="50"
    android:layout_marginLeft="4dp"
    tools:layout="@layout/no_table_hill_detail"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">
</fragment>
</LinearLayout>