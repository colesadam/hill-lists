<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<TextView   android:id="@+id/TextView01" android:layout_width="wrap_content" android:textColor="@color/white"
		android:layout_height="wrap_content"
		android:text="IMPORTANT - RESTORE WILL OVERWRITE EXISTING RECORDS"></TextView>
	<TextView   android:layout_width="match_parent"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center" android:id="@+id/folder_path" />
	<Button android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_marginBottom="16sp"
		android:id="@+id/pick_folder" android:text="Backup Bagged Hills to SD card" />
	<TextView   android:layout_width="match_parent"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center" android:id="@+id/file_path" />
	<Button android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_marginBottom="16sp"
		android:id="@+id/pick_file" android:text="Restore Bagged Hills from File" />

</LinearLayout>

