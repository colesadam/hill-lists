<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent">
	<LinearLayout
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TableLayout
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:stretchColumns="1" android:layout_marginTop="10dip"
			android:layout_marginLeft="2dip" android:layout_marginRight="2dip">
			<TableRow android:layout_margin="1dip" >
				<TextView   android:text="@string/label_name"
					android:padding="5dip" android:layout_margin="1dip" />
				<TextView   android:id="@+id/bdetail_name"
					android:layout_margin="1dip" android:width="200dip"
					android:gravity="right" android:textColor="@color/pale_blue"
					android:padding="5dip" />
			</TableRow>

			<TableRow android:layout_margin="1dip">
				<TextView   android:text="Tel. No." android:padding="5dip"
					android:layout_margin="1dip" />
				<TextView   android:autoLink="phone" android:id="@+id/bdetail_telephone"
					android:gravity="right" android:textColor="@color/pale_blue"
					android:padding="5dip" android:layout_margin="1dip" />
			</TableRow>

		</TableLayout>

		<TableLayout
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:stretchColumns="1" android:layout_marginTop="10dip"
			android:layout_marginLeft="2dip" android:layout_marginRight="2dip">
			<TableRow android:layout_margin="1dip" >
				<TextView   android:text="Address" android:padding="5dip"
					android:layout_margin="1dip" />
				<TextView   android:id="@+id/bdetail_address"
					android:layout_margin="1dip" android:width="200dip"
					android:gravity="right" android:textColor="@color/pale_blue"
					android:padding="5dip" />
			</TableRow>

			<TableRow android:layout_margin="1dip">
				<TextView   android:text="Postcode" android:padding="5dip"
					android:layout_margin="1dip" />
				<TextView   android:id="@+id/bdetail_postcode"
					android:gravity="right" android:textColor="@color/pale_blue"
					android:padding="5dip" android:layout_margin="1dip" />
			</TableRow>

		</TableLayout>
		
			<LinearLayout
				android:orientation="vertical" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView   android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoLink="all" android:id="@+id/scootLink" android:gravity="right"
					android:textColor="@color/pale_blue" android:padding="5dip"
					android:layout_margin="1dip" />
			</LinearLayout>



	</LinearLayout>
</ScrollView>