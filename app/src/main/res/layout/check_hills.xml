<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">



	<TextView   android:id="@+id/hill_name_checked"
		android:layout_width="250sp" android:layout_height="wrap_content"
		android:textColor="@color/white" android:layout_gravity="left"
		android:paddingBottom="2sp" android:paddingTop="2sp"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true" />

	<CheckBox android:id="@+id/check_hill_climbed"
		android:layout_height="wrap_content" android:paddingBottom="2sp"
		android:layout_gravity="right" 
		android:layout_alignParentTop="true" android:layout_alignParentRight="true"
		android:paddingTop="2sp" android:layout_width="wrap_content" android:layout_alignRight="@+id/name_entry"
		android:layout_toRightOf="@+id/hill_name_checked" ></CheckBox>




</RelativeLayout>
