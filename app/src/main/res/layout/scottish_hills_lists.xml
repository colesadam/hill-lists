        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintLeft_toLeftOf="@+id/centre_vertical_line"
        app:layout_constraintLeft_toRightOf="@+id/centre_vertical_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centre_horizontal"
        app:layout_constraintTop_toTopOf="@+id/centre_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            style="@style/menu_grid_imageview"
            android:src="@drawable/beinn_shiantaidh"
