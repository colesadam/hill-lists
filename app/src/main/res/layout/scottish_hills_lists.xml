        app:layout_constraintRight_toLeftOf="@+id/centre_vertical_line"
        app:layout_constraintTop_toTopOf="@+id/centre_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            style="@style/menu_grid_imageview"
            android:src="@drawable/broad_law"
            android:id="@+id/donalds_image"></ImageView>

        <TextView

            style="@style/cardview_title"
            android:text="@string/label_donalds" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/donald_tops"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
