<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="5sp"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/welsh_hewitts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/centre_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/left_vertical"
        app:layout_constraintTop_toTopOf="@+id/top_horizontal"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/centre_vertical_line">

        <ImageView

            android:id="@+id/hewitts_image"
            style="@style/menu_grid_imageview"
            android:src="@drawable/snowdon"></ImageView>

        <TextView
            style="@style/cardview_title"
            android:text="@string/label_hewitts"

            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/welsh_nuttalls"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/centre_vertical_line"
        app:layout_constraintTop_toTopOf="@+id/top_horizontal"
        app:layout_constraintRight_toLeftOf="@+id/right_vertical"
        app:layout_constraintBottom_toTopOf="@+id/centre_horizontal">

        <ImageView

            android:id="@+id/nuttalls_image"
            style="@style/menu_grid_imageview"
            android:src="@drawable/glyder_fawr"></ImageView>

        <TextView
            style="@style/cardview_title"
            android:text="@string/label_nuttalls"

            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/welsh_marilyns"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_text"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/left_vertical"
        app:layout_constraintRight_toLeftOf="@+id/centre_vertical_line"
        app:layout_constraintTop_toTopOf="@+id/centre_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_horizontal">

        <ImageView

            android:id="@+id/marilyns_image"
            style="@style/menu_grid_imageview"
            android:src="@drawable/tryfan"></ImageView>

        <TextView
            style="@style/cardview_title"
            android:text="@string/label_marilyns" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/allwelsh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/centre_vertical_line"
        app:layout_constraintRight_toLeftOf="@+id/right_vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_horizontal"
        app:layout_constraintTop_toTopOf="@+id/centre_horizontal">

        <ImageView

            android:id="@+id/all_welsh_image"
            style="@style/menu_grid_imageview"
            android:src="@drawable/wales_map"></ImageView>

        <TextView
            style="@style/cardview_title"
            android:text="@string/label_allWelsh"

            />


    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/centre_horizontal"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="296dp" />

    <android.support.constraint.Guideline
        android:id="@+id/top_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="148dp" />

    <android.support.constraint.Guideline
        android:id="@+id/centre_vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/bottom_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="444dp" />

    <android.support.constraint.Guideline
        android:id="@+id/right_vertical"
        android:layout_width="wrap_content"
        android:layout_height="592dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0"
        tools:layout_editor_absoluteX="401dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/left_vertical"
        android:layout_width="0dp"
        android:layout_height="592dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>



